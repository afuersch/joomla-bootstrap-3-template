<?php xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="2.5" type="template" method="upgrade">
    <name>Master Bootstrap</name>
    <creationDate>01 OCT 2013</creationDate>
    <author>Gonzalo Suez</author>
    <copyright>Copyright Â© 2013 gsuez.cl</copyright>
    <authorEmail>info@gsuez.cl</authorEmail>
    <authorUrl>http://www.gsuez.cl</authorUrl>
    <version>Stable 1.0</version>
    <description>TPL_BOOTSTRAP3_XML_DESCRIPTION</description>
    <files>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>includes</folder>
        <folder>js</folder>
        <folder>language</folder>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>favicon.ico</filename>
        <filename>templateDetails.xml</filename>
    </files>
    <positions>
        <position>top</position>
        <position>breadcrumbs</position>
        <position>navigation</position>
        <position>fullwidth</position>
        <position>showcase</position>
        <position>feature</position>
        <position>left</position>
        <position>right</position>
        <position>content-top</position>
        <position>content-bottom</position>
        <position>bottom</position>    
        <position>footer</position>
        <position>debug</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_bootstrap3.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_bootstrap3.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">

                <!-- WIDTH MAIN-->
	
                <field 
                    name="leftColumnWidth" 
                    type="list" 
                    default="3" 
                    label="TPL_BOOTSTRAP3_LEFT_COLUMN_WIDTH_LABEL" 
                    description="TPL_BOOTSTRAP3_LEFT_COLUMN_WIDTH_DESC"
                >
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </field>
				
                <field 
                    name="rightColumnWidth"
                    type="list"
                    default="3"
                    label="TPL_BOOTSTRAP3_RIGHT_COLUMN_WIDTH_LABEL"
                    description="TPL_BOOTSTRAP3_RIGHT_COLUMN_WIDTH_DESC"
                >
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </field>

                <!-- MODERNIZR-->
                <field 
                    name="modernizr"
                    type="radio"
                    default="0"
                    label="TPL_BOOTSTRAP3_MODERNIZR_LABEL"
                    description="TPL_BOOTSTRAP3_MODERNIZR_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <!-- FONT-AWESOME -->
                <field
                    name="fontawesome"
                    type="radio"
                    default="0"
                    label="TPL_BOOTSTRAP3_FONT_AWESOME_LABEL"
                    description="TPL_BOOTSTRAP3_FONT_AWESOME_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <!-- PIE-->
                <field
                    name="pie"
                    type="radio"
                    default="0"
                    label="TPL_BOOTSTRAP3_PIE_LABEL"
                    description="TPL_BOOTSTRAP3_PIE_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            
            <!-- LOGO-->
            <fieldset name="logo" 
                      type="upload_func" 
                      label="TPL_BOOTSTRAP3_FIELDSET_LOGO_LABEL"
            >
                <field
                    name="logo_file"
                    type="media"
                    label="TPL_BOOTSTRAP3_LOGO_FILE_LABEL"
                    description="TPL_BOOTSTRAP3_LOGO_FILE_DESC" />
                <field name="logo_link" type="text" label="Logo link:"  description="Example: http://www.ordasoft.com" default="index.php"></field>
                <field name="logo_width" type="text" label="Logo width:" description="Example: 90" default="173"></field>
                <field name="logo_height" type="text" label="Logo height:" description="Example: 90" default="26"></field>
            </fieldset>
        </fields>
    </config>
</extension>
